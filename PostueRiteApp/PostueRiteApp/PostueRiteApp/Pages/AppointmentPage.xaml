<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostueRiteApp.Pages.AppointmentPage"
             Title="Appointment">
  <StackLayout VerticalOptions="Start">
    <Label Text="Choose Doctor for Appointment" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" />
    <Grid>
      <Label Text="Name"/>
      <Label Grid.Column="1" Text="# of Appointments" />
      <Label Grid.Column="2" Text="Specialty"/>
    </Grid>
    <ListView x:Name ="DoctorList" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>
              <Label Text="{Binding Name}" FontAttributes="Bold"/>
              <Label Grid.Column="1" Text="{Binding Appointments}" />
              <Label Grid.Column="2" Text="{Binding Specialty}"/>
            </Grid>
          </ViewCell>
        </DataTemplate>

      </ListView.ItemTemplate>
    </ListView>
    <Button VerticalOptions="EndAndExpand" Text="Back to Profile" x:Name="BackToProfileButton" Clicked="BackToProfileButton_Clicked"></Button>
  </StackLayout>

</ContentPage>