<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostureRiteFinal.Pages.ManagerPage">
  <ContentPage.Content>
    <StackLayout Padding="10, 0">
      <Image Source="{Binding ManagerImg}" />
      <Label TextColor="#77d065" FontSize = "20" Text="The comment from the Clark Kent is:" />
      <Label Text ="{Binding ManagerName}" BackgroundColor="Red" />
      <Button Text="Upload Comment" Command="{Binding NavPageCommand}"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
