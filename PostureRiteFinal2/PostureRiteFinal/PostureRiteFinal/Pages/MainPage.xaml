<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostureRiteFinal.Pages.MainPage">
  <StackLayout>
    <Label Text="Select Option" VerticalOptions="Center" HorizontalOptions="Center"/>
    <Button x:Name="managercommand" Text="{Binding ManagerLabel}" />
    <Button Text="{Binding EmployeeLabel}" Command="{Binding EmployeeCommand}"/>
    <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
      <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
        <Label Text ="Employee Name: John Doe, Employee ID:" FontSize="15" />
      </StackLayout>
      <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
        <Label Text="{Binding EmployeeID}"  FontSize="15"/>
      </StackLayout>
    </StackLayout>
  </StackLayout>
</ContentPage>