<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewList.Views.SingleEmployee">
  <StackLayout Orientation="Vertical">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Label Text="{Binding LabelText}" Grid.Row="0" Grid.Column="0"  TextColor="Red" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" Grid.RowSpan="2" />
      <Button Text="Make Contact" Grid.Row="0" Grid.Column="1" FontSize="Micro"/>
      <Button Text="Refer to Ergonomist" Grid.Row="1" Grid.Column="1" FontSize="Micro"/>
      <Image Source="EmployeeScore.png" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Aspect="Fill"/>
      <Label Text="Current Score      22" Grid.Row="2" Grid.Column="1" FontSize="Micro" HorizontalOptions="Center" VerticalOptions="Center"/>
      <Label Text="Monthly Score      54" Grid.Row="3" Grid.Column="1" FontSize="Micro" HorizontalOptions="Center" VerticalOptions="Center"/>
      <Label Text="Total Score        78" Grid.Row="4" Grid.Column="1" FontSize="Micro" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
    <Image Source="graph.png" Aspect="Fill"/>
    
  </StackLayout>
</ContentPage>